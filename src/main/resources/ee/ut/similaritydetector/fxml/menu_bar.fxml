<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioMenuItem?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>

<MenuBar xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.java.ee.ut.similaritydetector.ui.controllers.MenuBarController">
    <menus>
        <Menu fx:id="fileMenu" mnemonicParsing="false" text="File">
            <items>
                <MenuItem mnemonicParsing="false" text="Close" />
            </items>
            <accelerator>
                <KeyCodeCombination alt="DOWN" code="F" control="UP" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </Menu>
        <Menu fx:id="editMenu" mnemonicParsing="false" text="Edit">
            <items>
                <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
            <accelerator>
                <KeyCodeCombination alt="DOWN" code="E" control="UP" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </Menu>
        <Menu fx:id="themeMenu" mnemonicParsing="false" text="Theme">
            <items>
                <RadioMenuItem fx:id="classicTheme" mnemonicParsing="false" selected="true" text="Classic">
                    <toggleGroup>
                        <ToggleGroup fx:id="themeGroup" />
                    </toggleGroup>
                </RadioMenuItem>
                <RadioMenuItem fx:id="darkTheme" mnemonicParsing="false" text="Dark" toggleGroup="$themeGroup" />
            </items>
        </Menu>
        <Menu fx:id="helpMenu" mnemonicParsing="false" text="Help">
            <items>
                <MenuItem fx:id="aboutMenuItem" onAction="#showAboutInfo" mnemonicParsing="false" text="About" />
            </items>
            <accelerator>
                <KeyCodeCombination alt="DOWN" code="E" control="UP" meta="UP" shift="UP" shortcut="UP" />
            </accelerator>
        </Menu>
    </menus>
</MenuBar>
